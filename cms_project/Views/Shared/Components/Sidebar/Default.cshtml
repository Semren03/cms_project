@model cms_project.Models.ViewModel.SideBarViewModel

<!-- Sidebar -->
<ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">

    <!-- Sidebar - Brand -->
    <a class="sidebar-brand d-flex align-items-center justify-content-center" href="index.html">
        <div class="sidebar-brand-icon rotate-n-15">
            <i class="fas fa-brain"></i> <!-- أيقونة عقل مع دوران -->
        </div>
        <div class="sidebar-brand-text mx-3">WISE CMS<sup>ADMIN</sup></div>
    </a>

    <!-- Divider -->
    <hr class="sidebar-divider my-0">

    <!-- Nav Item - Dashboard -->
    <li class="nav-item active">
        <a class="nav-link" asp-action="Index" asp-controller="Dashboard">
            <i class="fas fa-fw fa-home"></i> <!-- أيقونة منزل للدashboard -->
            <span>Dashboard</span>
        </a>
    </li>

    <!-- Divider -->
    <hr class="sidebar-divider">

    <!-- Nav Items for Students -->
    @if (Model.Role == "Student")
    {
        <li class="nav-item">
            <a class="nav-link collapsed" asp-controller="Complaints" asp-action="Create"
               aria-expanded="true" aria-controls="collapseTwo">
                <i class="fas fa-fw fa-plus-circle"></i> <!-- أيقونة زائد للدلالة على إضافة -->
                <span>Add Complaint</span>
            </a>
        </li>

        <li class="nav-item">
            <a class="nav-link collapsed" asp-controller="Complaints" asp-action="ShowHistoryComplaint"
               aria-expanded="true" aria-controls="collapseUtilities">
                <i class="fas fa-fw fa-history"></i> <!-- أيقونة تاريخ -->
                <span>Complaint History</span>
            </a>
            <div id="collapseUtilities" class="collapse" aria-labelledby="headingUtilities"
                 data-parent="#accordionSidebar">
                <div class="bg-white py-2 collapse-inner rounded">
                    <h6 class="collapse-header">Custom Utilities:</h6>
                    <a class="collapse-item" href="utilities-color.html">Colors</a>
                    <a class="collapse-item" href="utilities-border.html">Borders</a>
                    <a class="collapse-item" href="utilities-animation.html">Animations</a>
                    <a class="collapse-item" href="utilities-other.html">Other</a>
                </div>
            </div>
        </li>
    }

    <!-- Divider -->
    <hr class="sidebar-divider">

    <!-- Nav Items based on Permissions -->
    @if (Model.Permission.Contains("Resolve Complaint"))
    {
        <li class="nav-item">
            <a class="nav-link collapsed" asp-controller="Complaints" asp-action="InboxComplaint"
               aria-expanded="true" aria-controls="collapsePages">
                <i class="fas fa-fw fa-inbox"></i> <!-- أيقونة صندوق الوارد -->
                <span>Complaint Inbox</span>
            </a>
        </li>
    }
    @if (Model.Permission.Contains("Manage Complaints"))
    {
        <li class="nav-item">
            <a class="nav-link collapsed" asp-controller="Complaints" asp-action="ShowComplaint"
               aria-expanded="true" aria-controls="collapsePages">
                <i class="fas fa-fw fa-list-alt"></i> <!-- أيقونة قائمة -->
                <span>Complaint List</span>
            </a>
        </li>
    }

    <!-- Admin Role Items -->
    @if (Model.Role == "SuperAdmin")
    {
        <li class="nav-item">
            <a class="nav-link collapsed" asp-controller="MangementAdmin" asp-action="ManageRoles"
               aria-expanded="true" aria-controls="collapsePages">
                <i class="fas fa-fw fa-user-shield"></i> 
                <span>Management Role</span>
            </a>
        </li>

        <li class="nav-item">
            <a class="nav-link collapsed" asp-controller="MangementAdmin" asp-action="MangementTableUser"
               aria-expanded="true" aria-controls="collapsePages">
                <i class="fas fa-fw fa-users-cog"></i> 
                <span>Management User</span>
            </a>
        </li>

        <li class="nav-item">
            <a class="nav-link collapsed" asp-controller="MangementAdmin" asp-action="MangementTableComplaintType"
               aria-expanded="true" aria-controls="collapsePages">
                <i class="fas fa-fw fa-tags"></i> 
                <span>Complaint Type</span>
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link collapsed" asp-controller="MangementAdmin" asp-action="EditEmailSetting" asp-route-id="1"
               aria-expanded="true" aria-controls="collapsePages">
                <i class="fas fa-fw fa-envelope"></i>
                <span>Email Settings</span>
            </a>
        </li>


    }

</ul>
<!-- End of Sidebar -->
