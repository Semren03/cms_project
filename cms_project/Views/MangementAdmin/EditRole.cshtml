@model Role

<div class="container">
    <h2>Edit Role</h2>

    <form asp-action="UpdateRole">
        <div class="form-group">
            <label for="Name">Role Name</label>
            <input type="text" class="form-control" id="Name" asp-for="Name" required />
            <input type="hidden" class="form-control" id="Name" asp-for="Id" required />
       
        </div>

        <div class="form-group">
            <label>Assign Claims</label>
            <div>
                @foreach (var claim in ViewBag.Claims as SelectList)
                {
                    var isChecked = Model.Claims != null && Model.Claims.Count > 0 && Model.Claims.Any(c => c.Id == Convert.ToInt32(claim.Value));
                    <div class="form-check" >
                        <input class="form-check-input" type="checkbox" value="@claim.Value" id="claim_@claim.Value" name="selectedClaims" @(isChecked ? "checked" : "") />
                        <label class="form-check-label" for="claim_@claim.Value">@claim.Text</label>
                    </div>
                }
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Update Role</button>
        <a asp-action="ManageRoles" class="btn btn-primary">Cancel</a>
    </form>
</div>
