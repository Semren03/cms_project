@model cms_project.Models.Entites.Role

<div class="container">
    <h2>Add New Role</h2>

    <form asp-action="Create">
        <div class="form-group">
            <label for="Name">Role Name</label>
            <input type="text" class="form-control" id="Name" name="Name" required />
        </div>

        <div class="form-group">
            <label>Assign Claims</label>
            <div>
                @foreach (var claim in ViewBag.Claims as SelectList)
                {
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="@claim.Value" id="claim_@claim.Value" name="selectedClaims" />
                        <label class="form-check-label" for="claim_@claim.Value">@claim.Text</label>
                    </div>
                }
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Create Role</button>
    </form>
</div>
