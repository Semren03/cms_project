@using Newtonsoft.Json

@model AddUserRoleViewModel



<div class="container mt-5">
    <div class="card shadow-sm border-0">
        <div class="card-body">
            <h4 class="card-title mb-4">Assign Role to User</h4>

            <form class="form-inline mb-3" id="userSearchForm">
                <div class="form-group mr-2">
                    <label for="Email" class="sr-only">User Email</label>
                    <input type="email" class="form-control" id="Email" placeholder="Enter user email" required />
                </div>
                <button type="submit" class="btn btn-primary">Check User</button>
            </form>

            <div id="userInfo" class="mb-3"></div>

            <form asp-action="AddUser" method="post" class="form-inline" id="addRoleForm" style="display:none;">
                <div class="form-group mr-2">
                    <label for="RoleId" class="mr-2">Select Role:</label>
                    <select class="form-control" asp-for="@Model.RoleId" id="RoleId">
                        @foreach (var role in Model.Roles)
                        {
                            <option value="@role.Id">@role.Name</option>
                        }
                    </select>
                </div>
                <input type="hidden" id="userid" name="UserId" />

                <div class="form-group mr-2" id="complaintTypeDropdown" style="display: none;">
                    <label for="ComplaintTypeId" class="mr-2">Complaint Type:</label>
                    <select class="form-control" asp-for="ComplaintTypeResolverId" id="ComplaintTypeId">
                        <option value="-1">Select Type</option>

                        @foreach (var type in Model.ComplaintTypes)
                        {
                            <option value="@type.Id">@type.Name</option>
                        }
                    </select>
                </div>

                <button type="submit" class="btn btn-success">Assign Role</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
                 const rolesWithClaims = @Html.Raw(JsonConvert.SerializeObject(Model.Roles, new JsonSerializerSettings
                                {
                                    ReferenceLoopHandling = ReferenceLoopHandling.Ignore
                                }))
                 $('#RoleId').change(function () {
                     debugger
            const selectedRoleId = $(this).val();

            if (selectedRoleId && selectedRoleId=="1012") {
                $('#complaintTypeDropdown').show();
            } else {
                $('#complaintTypeDropdown').hide();
                $('#ComplaintTypeId').val("-1");
            }
        });
        $('#userSearchForm').submit(function (e) {
            e.preventDefault();
            const userEmail = $('#Email').val();

            $.ajax({
                url: '/MangementAdmin/GetUserData',
                type: 'GET',
                data: { Email: userEmail },
                success: function (data) {
                    if (data && data.success) {
                        $('#userInfo').html(`<div class="alert alert-success">✅ User Found: <strong>${data.user.name}</strong></div>`);
                        $('#userid').val(data.user.id);
                        $('#addRoleForm').fadeIn();
                        $('#RoleId').val(data.user.roleId);
                        debugger
                        if(data.user.complaintTypeResolverId !=null){
                $('#complaintTypeDropdown').show();
                $('#ComplaintTypeId').val(data.user.complaintTypeResolverId);
                        }
                    } else {
                        $('#userInfo').html(`<div class="alert alert-danger">❌ User not found.</div>`);
                        $('#addRoleForm').hide();
                    }
                },
                error: function () {
                    $('#userInfo').html(`<div class="alert alert-danger">⚠️ An error occurred while checking the user.</div>`);
                    $('#addRoleForm').hide();
                }
            });
        });
    </script>
}
