@model cms_project.Models.Entites.Role

@{
    var allClaims = ViewBag.Claims as SelectList;
}

<div class="container">
    <h2>Edit Role</h2>

    <form asp-action="Edit" method="post">
        <div class="form-group">
            <label for="Name">Role Name</label>
            <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" required />
        </div>

        <div class="form-group">
            <label>Assign Claims</label>
            <div>
                @foreach (var claim in allClaims)
                {
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="@claim.Value" id="claim_@claim.Value"
                               name="selectedClaims"
                        @(Model.Claims.Any(cr => cr.Id == int.Parse(claim.Value)) ? "checked" : "") />
                        <label class="form-check-label" for="claim_@claim.Value">@claim.Text</label>
                    </div>
                }
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Update Role</button>
    </form>
</div>
