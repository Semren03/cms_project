@model cms_project.Models.Entites.ComplaintType

<div class="container">
    <h2 class="mb-4">Add New Complaint Type</h2>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Complaint Type Form</h6>
        </div>
        <div class="card-body">
            <form asp-action="AddComplaintType" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Name" class="control-label">Category Name</label>
                    <input asp-for="Name" class="form-control" placeholder="Enter complaint type name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-success">Save</button>
                <a asp-action="MangementTableComplaintType" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
