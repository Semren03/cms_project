<div class="container">
    <div class="row mx-0 justify-content-center">
        <div class="col-md-7 col-lg-5 px-lg-2 col-xl-4 px-xl-0 px-xxl-3">
            <form asp-controller="Complaints" asp-action="Create" method="POST"
                            class="w-100 rounded-1 p-4 border bg-white"
                  >
                <label class="d-block mb-4">
                    <span class="form-label d-block">Your name</span>
                    <input name="StudentName"
                           type="text"
                           class="form-control"
                           placeholder="Joe Bloggs" />
                </label>

                <label class="d-block mb-4">
                    <span class="form-label d-block">ComplaintTitle</span>
                    <input name="Title"
                           type="text"
                           class="form-control"
                            />
                </label>

               
                <label class="d-block mb-4">
                    <span class="form-label d-block">What's wrong?</span>
                    <textarea name="Description"
                              class="form-control"
                              rows="3"
                              placeholder="Please describe your problem"></textarea>
                </label>

                <div class="mb-3">
                    <button type="submit" class="btn btn-primary px-3 rounded-3">
                        Submit
                    </button>
                </div>

                <div class="d-block text-end">
                    <div class="small">
                        by
                        <a href="https://herotofu.com"
                           class="text-dark text-decoration-none"
                           target="_blank">HeroTofu</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
