@using cms_project.Models.ViewModel
@model ComplaintViewModel;
<h1>Complaint Register Form </h1>
<section id="personal-information-content" class="tab-content active pt-0  mt-4">
    <div class="row">
        <div class="col-lg-6">
            <div id="fixed-autocomplete-container" class="position-relative">
                <label for="txtEmployeeName">Complaint Title</label>
                <input type="text" id="txtEmployeeName" maxlength="150" class="inputCustom"  asp-for="Title" />
                <span class="invalid-feedback" style="display: none;"></span>

            </div>
        </div>
        <div class="col-lg-6">

            <div class="position-relative">
                    <label for="txtRequestDate">Request Date</label>
                    <div class="position-relative">
                        <input type="text" id="txtRequestDate" maxlength="150" class="inputCustom" disabled
                               asp-for="CreatedDate" />
                        <div style="background-color:#F1D68E !important"
                             class="position-absolute calender-icon right-0 top-0">
                            <img src="~/images/calendar-icon.svg"
                                 alt="calendar">
                        </div>
                    </div>

                </div>
                </div>
            <div class="col-lg-12 mt-2">
                <div>
                    <label for="txtComments">Description</label>
                    <textarea class="w-100" id="txtComments" maxlength="1000" class="is-valid" asp-for="Description"
                              ></textarea>
                </div>

            </div>
        <div class="col-lg-6 mt-2">
            <div id="fixed-autocomplete-container" class="position-relative">
                <label for="txtEmployeeName">Complaint Category</label>
                <select class="inputCustom form-select" asp-for="@Model.ComplaintTypeId">
                    <option value="">-- Select Complaint Type --</option>

                    @foreach (var complaint in Model.ComplaintTypeList)
                    {
                        <option value="@complaint.Id">@complaint.Name</option>

                    }

                </select>
                <span class="invalid-feedback" style="display: none;"></span>

            </div>
            
        </div>

        <div class="col-lg-6 mt-2">
            <div id="fixed-autocomplete-container" class="position-relative">
                <label for="txtEmployeeName">Complaint Category</label>
                <input type="file" id="AttachContract" class="inputCustom form-control" multiple>
                <span class="invalid-feedback" style="display: none;"></span>
                </div>

        </div>
            </div>
 
            </section>
<div class="d-flex flex-row-reverse gap-3 mt-4">
    <button id="btnSubmit" class="yellow-btn">
        Submit
    </button>
    <button id="btnCancel" class="cancel-btn">Cancel</button>
</div>
