@model List<cms_project.Models.Entites.Announcement>

@{
    var role = ViewBag.Role as string;
    var canDelete = User.HasClaim("Permission", "CanDelete");
    var userName = ViewBag.UserName as string ?? "User";
    var averageResponseTime = ViewBag.AverageResponseTime as string ?? "N/A";
    var thisMonthSubmissions = ViewBag.ThisMonthSubmissions as int? ?? 0;
    var satisfactionRating = ViewBag.SatisfactionRating as double? ?? 0.0;
    var recentComplaints = ViewBag.RecentComplaints as IEnumerable<dynamic> ?? new List<dynamic>();
}

<div id="content-wrapper" class="d-flex flex-column">
    <div id="content">
        <div class="container-fluid">

            <!-- Welcome Header -->
            <div class="row mb-4">
                <div class="col-12">
                    <div class="card shadow border-0" style="background: linear-gradient(135deg, #00abbd 0%, #008d9c 100%);">
                        <div class="card-body text-white py-4">
                            <div class="row align-items-center">
                                <div class="col-md-8">
                                    <h2 class="mb-1">Welcome back</h2>
                                    <p class="mb-0 opacity-75">
                                        @if (role == "Student")
                                        {
                                            <span>Track your complaints and stay updated with university announcements.</span>
                                        }
                                        else
                                        {
                                            <span>Manage complaints and keep the university community informed.</span>
                                        }
                                    </p>
                                </div>
                                <div class="col-md-4 text-right">
                                    <div class="text-white-50">
                                        <i class="fas fa-calendar-day fa-2x mb-2"></i>
                                        <br>
                                        <small>@DateTime.Now.ToString("dddd, MMMM dd, yyyy")</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Statistics Cards -->
            <div class="row mb-4">
                @if (ViewBag.Role == "SuperAdmin")
                {
                    <!-- Admin Cards -->
                    <div class="col-xl-2 col-md-4 col-sm-6 mb-4">
                        <div class="card border-left-warning shadow h-100 py-2 hover-lift">
                            <div class="card-body">
                                <div class="row no-gutters align-items-center">
                                    <div class="col mr-2">
                                        <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                            Pending Requests
                                        </div>
                                        <div class="h5 mb-0 font-weight-bold text-gray-800">
                                            @ViewBag.PendingCount
                                        </div>
                                    </div>
                                    <div class="col-auto">
                                        <i class="fas fa-clock fa-2x text-warning"></i>
                                    </div>
                                </div>
                                <div class="progress mt-2" style="height: 4px;">
                                    <div class="progress-bar bg-warning" role="progressbar" style="width: 70%"></div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-xl-2 col-md-4 col-sm-6 mb-4">
                        <div class="card border-left-info shadow h-100 py-2 hover-lift">
                            <div class="card-body">
                                <div class="row no-gutters align-items-center">
                                    <div class="col mr-2">
                                        <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                            In Progress
                                        </div>
                                        <div class="h5 mb-0 font-weight-bold text-gray-800">
                                            @ViewBag.InProgressCount
                                        </div>
                                    </div>
                                    <div class="col-auto">
                                        <i class="fas fa-tasks fa-2x text-info"></i>
                                    </div>
                                </div>
                                <div class="progress mt-2" style="height: 4px;">
                                    <div class="progress-bar bg-info" role="progressbar" style="width: 45%"></div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-xl-2 col-md-4 col-sm-6 mb-4">
                        <div class="card border-left-success shadow h-100 py-2 hover-lift">
                            <div class="card-body">
                                <div class="row no-gutters align-items-center">
                                    <div class="col mr-2">
                                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                            Resolved
                                        </div>
                                        <div class="h5 mb-0 font-weight-bold text-gray-800">
                                            @ViewBag.ResolvedCount
                                        </div>
                                    </div>
                                    <div class="col-auto">
                                        <i class="fas fa-check-circle fa-2x text-success"></i>
                                    </div>
                                </div>
                                <div class="progress mt-2" style="height: 4px;">
                                    <div class="progress-bar bg-success" role="progressbar" style="width: 85%"></div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-xl-2 col-md-4 col-sm-6 mb-4">
                        <div class="card border-left-primary shadow h-100 py-2 hover-lift">
                            <div class="card-body">
                                <div class="row no-gutters align-items-center">
                                    <div class="col mr-2">
                                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                            Completed
                                        </div>
                                        <div class="h5 mb-0 font-weight-bold text-gray-800">
                                            @ViewBag.CompletedCount
                                        </div>
                                    </div>
                                    <div class="col-auto">
                                        <i class="fas fa-flag-checkered fa-2x text-primary"></i>
                                    </div>
                                </div>
                                <div class="progress mt-2" style="height: 4px;">
                                    <div class="progress-bar bg-primary" role="progressbar" style="width: 100%"></div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-xl-2 col-md-4 col-sm-6 mb-4">
                        <div class="card border-left-danger shadow h-100 py-2 hover-lift">
                            <div class="card-body">
                                <div class="row no-gutters align-items-center">
                                    <div class="col mr-2">
                                        <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">
                                            Overdue
                                        </div>
                                        <div class="h5 mb-0 font-weight-bold text-gray-800">
                                            @ViewBag.OverdueCount
                                        </div>
                                    </div>
                                    <div class="col-auto">
                                        <i class="fas fa-exclamation-triangle fa-2x text-danger"></i>
                                    </div>
                                </div>
                                <div class="progress mt-2" style="height: 4px;">
                                    <div class="progress-bar bg-danger" role="progressbar" style="width: 25%"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                else if (ViewBag.Role == "Student")
                {
                    <!-- Student Cards -->
                    <div class="col-xl-3 col-md-6 mb-4">
                        <div class="card border-left-warning shadow h-100 py-2 hover-lift">
                            <div class="card-body">
                                <div class="row no-gutters align-items-center">
                                    <div class="col mr-2">
                                        <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                            My Pending
                                        </div>
                                        <div class="h5 mb-0 font-weight-bold text-gray-800">
                                            @ViewBag.PendingCount
                                        </div>
                                        <small class="text-muted">Awaiting review</small>
                                    </div>
                                    <div class="col-auto">
                                        <i class="fas fa-hourglass-half fa-2x text-warning"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-xl-3 col-md-6 mb-4">
                        <div class="card border-left-info shadow h-100 py-2 hover-lift">
                            <div class="card-body">
                                <div class="row no-gutters align-items-center">
                                    <div class="col mr-2">
                                        <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                            In Progress
                                        </div>
                                        <div class="h5 mb-0 font-weight-bold text-gray-800">
                                            @ViewBag.InProgressCount
                                        </div>
                                        <small class="text-muted">Being resolved</small>
                                    </div>
                                    <div class="col-auto">
                                        <i class="fas fa-cogs fa-2x text-info"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-xl-3 col-md-6 mb-4">
                        <div class="card border-left-success shadow h-100 py-2 hover-lift">
                            <div class="card-body">
                                <div class="row no-gutters align-items-center">
                                    <div class="col mr-2">
                                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                            Resolved
                                        </div>
                                        <div class="h5 mb-0 font-weight-bold text-gray-800">
                                            @ViewBag.ResolvedCount
                                        </div>
                                        <small class="text-muted">Successfully resolved</small>
                                    </div>
                                    <div class="col-auto">
                                        <i class="fas fa-check-circle fa-2x text-success"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>


                }
            </div>

            <!-- Main Content Row -->
            <div class="row">
                <!-- Latest Announcements -->
                <div class="col-lg-8 mb-4">
                    <div class="card shadow border-0">
                        <div class="card-header bg-gradient-primary text-white py-3">
                            <div class="row align-items-center">
                                <div class="col">
                                    <h6 class="m-0 font-weight-bold">
                                        <i class="fas fa-bullhorn mr-2"></i>Latest Announcements
                                    </h6>
                                </div>
                            </div>
                        </div>
                        <div class="card-body p-0">
                            @if (Model != null && Model.Any())
                            {
                                <div class="announcement-container" style="max-height: 400px; overflow-y: auto;">
                                    @foreach (var ann in Model.Take(5))
                                    {
                                        <div class="announcement-item border-bottom p-3 hover-bg-light">
                                            <div class="row align-items-start">
                                                <div class="col-1">
                                                    <div class="announcement-icon bg-primary text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                                        <i class="fas fa-info-circle"></i>
                                                    </div>
                                                </div>
                                                <div class="col-8">
                                                    <h6 class="mb-1 font-weight-bold text-dark">@ann.Title</h6>
                                                    <p class="mb-1 text-gray-600">@ann.Content</p>
                                                    <small class="text-muted">
                                                        <i class="fas fa-calendar-alt mr-1"></i>
                                                        @ann.DatePosted.ToString("MMM dd, yyyy 'at' hh:mm tt")
                                                    </small>
                                                </div>
                                                <div class="col-3 text-right">
                                                    @if (ViewBag.Role == "SuperAdmin")
                                                    {
                                                        <form asp-action="DeleteAnnouncement" asp-controller="Dashboard" method="get" onsubmit="return confirm('Are you sure you want to delete this announcement?');">
                                                            <input type="hidden" name="id" value="@ann.Id" />
                                                            <button type="submit" class="btn btn-sm btn-danger" title="Delete">
                                                                <i class="fas fa-trash-alt"></i>
                                                            </button>
                                                        </form>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                            else
                            {
                                <p class="text-center p-4">No announcements available.</p>
                            }
                        </div>
                    </div>
                </div>
            </div>


                <!-- Quick Actions for Students -->
                @if (ViewBag.Role == "Student")
                {
                    <div class="col-lg-4 mb-4">
                        <div class="card shadow border-0">
                            <div class="card-header bg-gradient-success text-white py-3">
                                <h6 class="m-0 font-weight-bold"><i class="fas fa-bolt mr-2"></i>Quick Actions</h6>
                            </div>
                            <div class="card-body p-3">
                                <div class="quick-actions-list d-flex flex-column">
                                    <a href="@Url.Action("ShowHistoryComplaint", "Complaints")" class="btn btn-outline-primary mb-2">
                                        <i class="fas fa-list mr-2"></i>My Complaints
                                    </a>
                                    <a href="@Url.Action("Create", "Complaints")" class="btn btn-outline-success mb-2">
                                        <i class="fas fa-plus mr-2"></i>Submit New Complaint
                                    </a>
                                    <a href="@Url.Action("FAQ", "Dashboard")" class="btn btn-outline-info">
                                        <i class="fas fa-question-circle mr-2"></i>FAQ
                                    </a>

                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

        </div>
    </div>
</div>

<!-- Custom Styles moved outside conditional blocks -->
<style>
    .hover-lift {
        transition: transform 0.3s ease;
    }

        .hover-lift:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 15px rgba(0, 0, 0, 0.2);
        }

    .hover-bg-light:hover {
        background-color: #f8f9fa;
        cursor: pointer;
    }

    .announcement-icon {
        font-size: 18px;
    }

    .quick-actions-list .btn {
        text-align: left;
        font-weight: 600;
        letter-spacing: 0.02em;
    }
</style>
