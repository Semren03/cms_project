@model List<cms_project.Models.Entites.Announcement>

<div id="content-wrapper" class="d-flex flex-column">
    <div id="content">
        <div class="container-fluid">

            <!-- Cards Row -->
            <div class="row">

                <!-- Pending Requests Card -->
                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-warning shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                        Pending Requests
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">
                                        @ViewBag.PendingCount
                                    </div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-clock fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- In Progress Card -->
                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-info shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                        In Progress
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">
                                        @ViewBag.InProgressCount
                                    </div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-spinner fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Resolved Card -->
                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-success shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                        Resolved
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">
                                        @ViewBag.ResolvedCount
                                    </div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-check-circle fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Completed Card -->
                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-danger shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">
                                        Completed
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">
                                        @ViewBag.CompletedCount
                                    </div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-times-circle fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

            <!-- Row: Latest Announcements & Quick Actions -->
            <div class="row">

                <!-- Latest Announcements -->
                <div class="col-lg-6 mb-4">
                    <div class="card shadow">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">📢 Latest Announcements</h6>
                        </div>
                        <div class="card-body">
                            <ul class="list-group">
                                @if (Model != null && Model.Any())
                                {
                                    @foreach (var ann in Model)
                                    {
                                        <li class="list-group-item d-flex justify-content-between align-items-start">
                                            <div>
                                                📅 <strong>@ann.Title</strong> – @ann.DatePosted.ToString("MMMM d, yyyy hh:mm tt")
                                                <br />
                                                <small>@ann.Content</small>
                                            </div>
                                            <form asp-action="DeleteAnnouncement" asp-controller="Dashboard" method="post" onsubmit="return confirm('Are you sure you want to delete this announcement?');">
                                                <input type="hidden" name="id" value="@ann.Id" />
                                                <button type="submit" class="btn btn-sm btn-danger ml-3">🗑️ Delete</button>
                                            </form>
                                        </li>
                                    }

                                }
                                else
                                {
                                    <li class="list-group-item">No announcements available.</li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>

                <!-- Quick Actions -->
                <div class="col-lg-6 mb-4">
                    <div class="card shadow">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">⚙️ Quick Actions</h6>
                        </div>
                        <div class="card-body text-center">
                            <a href="/Complaints/Create" class="btn btn-primary m-2">
                                <i class="fas fa-plus-circle"></i> New Complaint
                            </a>
                            <a href="/Help/FAQ" class="btn btn-secondary m-2">
                                <i class="fas fa-question-circle"></i> FAQ
                            </a>
                        </div>
                    </div>
                </div>

            </div>
            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-left-danger shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">
                                    Overdue Complaints
                                </div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">
                                    @ViewBag.OverdueCount
                                </div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-exclamation-triangle fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
